<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.ted.aggredata.client'>
    <ui:style src="../../Global.css"/>
    <ui:with field='txtRes' type='com.ted.aggredata.client.resources.lang.DashboardConstants'/>
    <g:VerticalPanel horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" ui:field="mainPanel">
        <my:widgets.ClearImage width="800" height="1px"/>
        <g:Label styleName='{style.panelTitleText}' ui:field="titleLabel"/>
        <my:widgets.ClearImage width="800" height="3px"/>
        <g:Label styleName='{style.panelInstructionText}' ui:field="instructionLabel"/>
        <my:widgets.ClearImage width="800" height="20px"/>

        <g:HorizontalPanel horizontalAlignment="AlIGN_LEFT" verticalAlignment="ALIGN_TOP">
            <g:VerticalPanel horizontalAlignment="ALIGN_LEFT">
                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsFirstName}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="firstNameField" width="150px"  styleName="{style.formField}"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="firstNameFieldError" styleName="{style.formError}" />
                </g:HorizontalPanel>
    
                <my:widgets.ClearImage width="2" height="5"/>
    
                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsMiddleName}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="middleNameField" width="150px" styleName="{style.formField}" />
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="middleNameFieldError" styleName="{style.formError}" />
                </g:HorizontalPanel>
    
                <my:widgets.ClearImage width="2" height="5"/>

                <g:HorizontalPanel horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsLastName}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="lastNameField" width="150px"  styleName="{style.formField}"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="lastNameFieldError" styleName="{style.formError}" />
                </g:HorizontalPanel>

    
                <my:widgets.ClearImage width="2" height="5"/>
    
                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsCompanyName}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="companyNameField" width="150px"  styleName="{style.formField}"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="companyNameFieldError" styleName="{style.formError}" />
                </g:HorizontalPanel>
    
                <my:widgets.ClearImage width="2" height="5"/>
    
                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsAddress}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="addressField" width="150px"  styleName="{style.formField}"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="addressFieldError" styleName="{style.formError}" />
                </g:HorizontalPanel>
    
                <my:widgets.ClearImage width="2" height="5"/>
    
                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsCity}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="cityField" width="150px" styleName="{style.formField}"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="cityFieldError" styleName="{style.formError}" />
                </g:HorizontalPanel>
    
                <my:widgets.ClearImage width="2" height="5"/>
    
                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingState}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="stateField" width="150px" styleName="{style.formField}" />
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="stateFieldError" styleName="{style.formError}" />
                </g:HorizontalPanel>
    
                <my:widgets.ClearImage width="2" height="5"/>
    
                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsZip}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="zipField" width="150px"  styleName="{style.formField}"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="zipFieldError" styleName="{style.formError}" />
                </g:HorizontalPanel>
    
                <my:widgets.ClearImage width="2" height="5"/>
    
                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsPhoneNumber}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="phoneNumberField" width="150px" styleName="{style.formField}" />
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="phoneNumberFieldError" styleName="{style.formError}" />
                </g:HorizontalPanel>
                <my:widgets.ClearImage width="2" height="5"/>
            </g:VerticalPanel>
            <g:VerticalPanel horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP">
                <g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_TOP">
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsCustom1}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="custom1Field" width="150px" styleName="{style.formField}" />
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="custom1FieldError" styleName="{style.formError}" />
                </g:HorizontalPanel>
    
                <my:widgets.ClearImage width="2" height="5"/>
    
                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsCustom2}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="custom2Field" width="150px" styleName="{style.formField}" />
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="custom2FieldError" styleName="{style.formError}" />
                </g:HorizontalPanel>
    
                <my:widgets.ClearImage width="2" height="5"/>
    
                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsCustom3}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="custom3Field" width="150px" styleName="{style.formField}" />
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="custom3FieldError" styleName="{style.formError}"/>
                </g:HorizontalPanel>
    
                <my:widgets.ClearImage width="2" height="5"/>
    
                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsCustom4}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="custom4Field" width="150px" styleName="{style.formField}" />
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="custom4FieldError" styleName="{style.formError}"/>
                </g:HorizontalPanel>
    
                <my:widgets.ClearImage width="2" height="5"/>

                <g:HorizontalPanel>
                    <my:widgets.ClearImage width="100" height="1px"/>
                    <g:Label styleName='{style.formLabel}' text='{txtRes.profileSettingsCustom5}' width="100px"/>
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:TextBox ui:field="custom5Field" width="150px" styleName="{style.formField}" />
                    <my:widgets.ClearImage width="2" height="1px"/>
                    <g:Label ui:field="custom5FieldError" styleName="{style.formError}"/>
                </g:HorizontalPanel>

                <my:widgets.ClearImage width="2" height="5"/>

                <g:HorizontalPanel ui:field="changePasswordPanel" horizontalAlignment="ALIGN_CENTER">
                    <my:widgets.ClearImage width="200" height="2"/>
                    <my:widgets.HugeButton ui:field="changePassword" buttonString="Change Password"/>
                </g:HorizontalPanel>

                <my:widgets.ClearImage width="2" height="5"/>

                <g:HorizontalPanel ui:field="changeUsernamePanel" horizontalAlignment="ALIGN_CENTER">
                    <my:widgets.ClearImage width="200" height="2"/>
                    <my:widgets.HugeButton ui:field="changeUname" buttonString="Change Username"/>
                </g:HorizontalPanel>

            </g:VerticalPanel>
         </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>
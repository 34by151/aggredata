<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.ted.aggredata.client'
             xmlns:gd='urn:import:com.google.gwt.user.datepicker.client'
        >
    <ui:style src="../Global.css"/>
    <ui:with field='txtRes' type='com.ted.aggredata.client.resources.lang.DashboardConstants'/>

    <g:VerticalPanel>
        <g:Label width="180px" styleName="{style.sideBarHeader}" text="{txtRes.sideBarDateHeader}"/>
        <g:Label width="180px" styleName="{style.sideBarInstructions}" text="{txtRes.sideBarDateDetails}"/>
        <my:widgets.ClearImage width="2px" height="5px"/>
        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
            <g:Label text="{txtRes.minuteDate}" styleName="{style.sideBarLabel}"/>
            <my:widgets.ClearImage width="2px" height="2px"/>
            <gd:DateBox ui:field="startDateBox" width="104px"  styleName="{style.sideBarFormField}"/>
        </g:HorizontalPanel>
        <my:widgets.ClearImage width="1px" height="2px"/>
        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
            <g:Label text="{txtRes.minuteStartTime}" styleName="{style.sideBarLabel}"/>
            <my:widgets.ClearImage width="2px" height="2px"/>
            <my:widgets.TimePicker ui:field="startTimePicker" width="110px" interval="15" styleName="{style.sideBarFormField}"/>
        </g:HorizontalPanel>
        <my:widgets.ClearImage width="1px" height="2px"/>
        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
            <g:Label text="{txtRes.minuteEndTime}" styleName="{style.sideBarLabel}"/>
            <my:widgets.ClearImage width="2px" height="2px"/>
            <my:widgets.TimePicker ui:field="endTimePicker" width="110px" interval="15" styleName="{style.sideBarFormField}"/>
        </g:HorizontalPanel>
        <my:widgets.ClearImage width="1px" height="2px"/>
        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
            <g:Label text="{txtRes.minuteInterval}" styleName="{style.sideBarLabel}"/>
            <my:widgets.ClearImage width="2px" height="2px"/>
            <g:ListBox ui:field="durationListBox" width="110px" styleName="{style.sideBarFormField}" />
        </g:HorizontalPanel>
    </g:VerticalPanel>



</ui:UiBinder>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.ted.aggredata.client'>
    <ui:style src="../panels/Global.css"/>

    <ui:with field='txtRes' type='com.ted.aggredata.client.resources.lang.DashboardConstants'/>
    <g:CaptionPanel ui:field="captionPanel" width="220px">
    <g:VerticalPanel horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_TOP" width="200px">
        <my:widgets.ClearImage width="220px" height="5px"/>
        <g:HorizontalPanel>
            <g:Label ui:field="messageLabel"/>
        </g:HorizontalPanel>
            <my:widgets.ClearImage width="220px" height="10px"/>
        <g:HorizontalPanel>
            <my:widgets.ClearImage width="100px" height="10px"/>
            <my:widgets.SmallButton ui:field="okButton" buttonString="{txtRes.ok}"/>
        </g:HorizontalPanel>
        <my:widgets.ClearImage width="220px" height="5px"/>
    </g:VerticalPanel>
    </g:CaptionPanel>

</ui:UiBinder>
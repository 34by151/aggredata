        </g:HorizontalPanel>

        <my:widgets.ClearImage width="1px" height="20px"/>

        <g:HorizontalPanel>
            <my:widgets.ClearImage width="10px" height="1px"/>
            <g:Label ui:field="instructionsLabel2" stylePrimaryName="{style.sideBarInstructionsLeft}" width="160px"/>
        </g:HorizontalPanel>

        <my:widgets.ClearImage width="1px" height="20px"/>
        <g:HorizontalPanel>
            <my:widgets.ClearImage width="10px" height="1px"/>
            <g:Label ui:field="instructionsLabel3" stylePrimaryName="{style.sideBarInstructionsLeft}" width="160px"/>
        </g:HorizontalPanel>

    </g:VerticalPanel>


</ui:UiBinder>
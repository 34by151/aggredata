<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.ted.aggredata.client'>
    <ui:style src="../../Global.css"/>

    <g:VerticalPanel horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP" ui:field="mainPanel">
        <my:widgets.ClearImage width="800" height="1px"/>
        <g:Label styleName='{style.panelTitleText}' ui:field="titleLabel"/>
        <my:widgets.ClearImage width="800" height="3px"/>
        <g:Label styleName='{style.panelInstructionText}' ui:field="instructionLabel"/>
        <my:widgets.ClearImage width="800" height="20px"/>


        <g:HorizontalPanel>
            <my:widgets.ClearImage width="100" height="1px"/>
            <g:Label ui:field="lastNameLabel" styleName='{style.formLabel}'/>
            <my:widgets.ClearImage width="2" height="1px"/>
            <g:TextBox ui:field="lastNameField" width="200px"  />
            <my:widgets.ClearImage width="2" height="1px"/>
            <g:Label ui:field="lastNameFieldError" styleName="{style.formError}"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel>
            <my:widgets.ClearImage width="100" height="1px"/>
            <g:Label ui:field="firstNameLabel" styleName='{style.formLabel}'/>
            <my:widgets.ClearImage width="2" height="1px"/>
            <g:TextBox ui:field="firstNameField" width="200px"  />
            <my:widgets.ClearImage width="2" height="1px"/>
            <g:Label ui:field="firstNameFieldError" styleName="{style.formError}"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel>
            <my:widgets.ClearImage width="100" height="1px"/>
            <g:Label ui:field="companyNameLabel" styleName='{style.formLabel}'/>
            <my:widgets.ClearImage width="2" height="1px"/>
            <g:TextBox ui:field="companyNameField" width="200px"  />
            <my:widgets.ClearImage width="2" height="1px"/>
            <g:Label ui:field="companyNameFieldError" styleName="{style.formError}"/>
        </g:HorizontalPanel>

        <my:widgets.ClearImage width="1px" height="50px"/>
        <g:HorizontalPanel ui:field="buttonPanel">
            <my:widgets.LargeButton ui:field="saveButton" buttonString="Save"/>
            <my:widgets.ClearImage width="10px" height="1px"/>
            <my:widgets.LargeButton ui:field="resetButton" buttonString="Reset"/>
        </g:HorizontalPanel>





    </g:VerticalPanel>

</ui:UiBinder>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.ted.aggredata.client'
        >
    <ui:style src="../Global.css" type="com.ted.aggredata.client.panels.Global.Style" />
    <ui:with field='txtRes' type='com.ted.aggredata.client.resources.lang.DashboardConstants'/>

    <g:VerticalPanel>
        <g:Label width="180px" styleName="{style.sideBarHeader}" text="{txtRes.sideBarGroupHeader}"/>
        <g:Label width="180px" styleName="{style.sideBarInstructions}" text="{txtRes.sideBarGroupDetails}"/>
        <g:ScrollPanel width="180px" height="100px" ui:field="scrollPanel">
            <g:HorizontalPanel>
                <my:widgets.ClearImage width="20px" height="4px"/>
                <g:VerticalPanel ui:field="groupPanel"/>
            </g:HorizontalPanel>
        </g:ScrollPanel>
    </g:VerticalPanel>


</ui:UiBinder>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.ted.aggredata.client'>
    <ui:style src="../../Global.css"/>

    <ui:with field='txtRes' type='com.ted.aggredata.client.resources.lang.DashboardConstants'/>

    <g:CaptionPanel ui:field="captionPanel" width="220px" styleName="{style.captionHeader}">
        <g:VerticalPanel horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_TOP" width="200px">
            <g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_TOP">
                <my:widgets.ClearImage width="10" height="1px"/>
                <g:Label styleName='{style.formLabel}' text='{txtRes.gatewaySerialNumber}' width="120px"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:TextBox ui:field="serialNumberField" width="150px" styleName="{style.formField}"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:Label ui:field="serialNumberFieldError" styleName="{style.formError}" width="80px"/>
            </g:HorizontalPanel>

            <my:widgets.ClearImage width="2" height="5"/>

            <g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_TOP">
                <my:widgets.ClearImage width="10" height="1px"/>
                <g:Label styleName='{style.formLabel}' text='{txtRes.gatewaySettingsDescription}' width="120px"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:TextBox ui:field="descriptionField" width="150px" styleName="{style.formField}"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:Label ui:field="descriptionFieldError" styleName="{style.formError}" width="80px"/>
            </g:HorizontalPanel>

            <my:widgets.ClearImage width="2" height="5"/>

            <g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_TOP">
                <my:widgets.ClearImage width="10" height="1px"/>
                <g:Label styleName='{style.formLabel}' text='{txtRes.gatewaySettingsCustom1}' width="120px"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:TextBox ui:field="custom1Field" width="150px" styleName="{style.formField}"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:Label ui:field="custom1FieldError" styleName="{style.formError}" width="80px"/>
            </g:HorizontalPanel>

            <my:widgets.ClearImage width="2" height="5"/>

            <g:HorizontalPanel>
                <my:widgets.ClearImage width="10" height="1px"/>
                <g:Label styleName='{style.formLabel}' text='{txtRes.gatewaySettingsCustom2}' width="120px"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:TextBox ui:field="custom2Field" width="150px" styleName="{style.formField}"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:Label ui:field="custom2FieldError" styleName="{style.formError}" width="80px"/>
            </g:HorizontalPanel>

            <my:widgets.ClearImage width="2" height="5"/>

            <g:HorizontalPanel>
                <my:widgets.ClearImage width="10" height="1px"/>
                <g:Label styleName='{style.formLabel}' text='{txtRes.gatewaySettingsCustom3}' width="120px"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:TextBox ui:field="custom3Field" width="150px" styleName="{style.formField}"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:Label ui:field="custom3FieldError" styleName="{style.formError}" width="80px"/>
            </g:HorizontalPanel>

            <my:widgets.ClearImage width="2" height="5"/>

            <g:HorizontalPanel>
                <my:widgets.ClearImage width="10" height="1px"/>
                <g:Label styleName='{style.formLabel}' text='{txtRes.gatewaySettingsCustom4}' width="120px"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:TextBox ui:field="custom4Field" width="150px" styleName="{style.formField}"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:Label ui:field="custom4FieldError" styleName="{style.formError}" width="80px"/>
            </g:HorizontalPanel>

            <my:widgets.ClearImage width="2" height="5"/>

            <g:HorizontalPanel>
                <my:widgets.ClearImage width="10" height="1px"/>
                <g:Label styleName='{style.formLabel}' text='{txtRes.gatewaySettingsCustom5}' width="120px"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:TextBox ui:field="custom5Field" width="150px" styleName="{style.formField}"/>
                <my:widgets.ClearImage width="2" height="1px"/>
                <g:Label ui:field="custom5FieldError" styleName="{style.formError}" width="80px"/>
            </g:HorizontalPanel>

            <my:widgets.ClearImage width="2" height="5"/>

            <my:panels.profile.gateways.GatewaysMTUPanel ui:field="gatewayMTUPanel"/>

        </g:VerticalPanel>
    </g:CaptionPanel>

</ui:UiBinder>